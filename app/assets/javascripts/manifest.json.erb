<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "Enchanted World App",
  "short_name": "EnchantedWorld",
  "lang": "en-US",
  "gcm_sender_id": "enchanted-world-app",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "icons/android-icon-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#000000",
  "background_color": "#FFFFFF",
  "display": "standalone",
  "orientation": "portrait"
}
